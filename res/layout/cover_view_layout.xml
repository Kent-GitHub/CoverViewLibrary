<?xml version="1.0" encoding="utf-8"?>
<com.example.coverviewlibrary.CoverView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coverView"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#faf0f0f0">

    <ProgressBar
        android:layout_centerHorizontal="true"
        android:id="@+id/cover_view_progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="123dp" />
		
    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/cover_view_image"
        android:layout_below="@id/cover_view_progressBar"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:src="@drawable/refresh_loadfailed" />

    <TextView
        android:layout_centerHorizontal="true"
        android:id="@+id/cover_view_tv"
        android:layout_below="@id/cover_view_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cover_view_tv_loading"
        android:textColor="#000000"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_centerHorizontal="true"
        android:id="@+id/cover_view_btn"
        android:layout_below="@id/cover_view_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cover_view_btn_reload"
        android:layout_marginTop="20dp" /> 

</com.example.coverviewlibrary.CoverView>